{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["es6", "es5"],
    "typeRoots": [
      "./node_modules/@types",
    ],
    "outDir": "build",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "sourceMap": true,
    "noLib": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "pretty": true,
    "allowJs": false,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "build/**/*",
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}
